name: ftlex
version: 0.3.6
cabal-version: >= 1.10
build-type: Simple
license: LGPL-3
license-file: LICENSE.md
copyright: (c) 2024 Marcel Schütz
author: Marcel Schütz
maintainer: marcel.schuetz@fau.de
stability: experimental
homepage: https://github.com/McEarl/FTLex
bug-reports: https://github.com/McEarl/FTLex/issues
category: ForTheL, CNL, Lexing
synopsis: A generic ForTheL lexer
description:
  This is a library that provides an abstract ForTheL lexer that is independent
  of concrete character encodings, position types, syntax highlighting
  specifications etc. and can thus be used as a generic basis for a wide range
  of ForTheL parsing frameworks.
extra-source-files:
  README.md
  CHANGELOG.md
  LICENSE.md

source-repository head
  type: git
  location: https://github.com/McEarl/FTLex.git
  branch: main

library
  hs-source-dirs: src
  exposed-modules:
    FTLex.Base
    FTLex.Debug
    FTLex.Ftl
    FTLex.Message
    FTLex.Position
    FTLex.Tex
  other-modules:
    FTLex.Error
    FTLex.Helpers
  build-depends:
    base >= 4.17.2.1 && <= 4.19.1.0,
    containers >= 0.6.7 && <= 0.6.8,
    megaparsec >= 9.5.0 && <= 9.6.1,
    mtl == 2.3.1,
    text >= 2.0.2 && <= 2.1.1,
    transformers >= 0.6 && <= 0.6.1.0,
    bytestring >= 0.11
  default-extensions:
    ImportQualifiedPost
    OverloadedStrings
    MultiParamTypeClasses
    InstanceSigs
  ghc-options:
    -Wall
    -fno-warn-unused-do-bind
    -fno-warn-unused-matches
    -fno-warn-name-shadowing
    -fno-warn-orphans
  default-language: Haskell2010

test-suite test
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs: src/Test
  build-depends:
    base >= 4.17,
    text >= 2.0.2,
    containers >= 0.6.7,
    bytestring >= 0.12,
    filepath,
    ftlex
  default-extensions:
    ImportQualifiedPost
    OverloadedStrings
    MultiParamTypeClasses
    InstanceSigs
  ghc-options:
    -Wall
    -fno-warn-unused-do-bind
    -fno-warn-unused-matches
    -fno-warn-name-shadowing
    -fno-warn-orphans
  default-language: Haskell2010
